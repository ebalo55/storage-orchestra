{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "notification:default",
    "fs:default",
    "opener:allow-open-path",
    "oauth:allow-start",
    "oauth:allow-cancel",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.googleapis.com"
        }
      ]
    },
    "store:default",
    "upload:default",
    "shell:default"
  ]
}